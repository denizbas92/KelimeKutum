<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="AYARLAR"
            android:textSize="45sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTrueFalseTestNumber"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Doğru-Yanlış Test Sayısı"
                android:textSize="35sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMultipleChoiceTestNumber"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:foreground="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:text="Çoktan Seçmeli Test Sayısı"
                android:textSize="35sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardListenMeaningTestNumber"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:foreground="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:text="Dinle-Anlamı Seç Test Sayısı"
                android:textSize="35sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardListenWordTestNumber"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:text="Dinle-Kelimeyi Seç Test Sayısı"
                android:textSize="35sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardListenWriteTestNumber"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:gravity="center|left"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:text="Dinle-Kelimeyi Yaz Test Sayısı"
                android:textSize="35sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSeeMeaningWriteWord"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f6f6"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:gravity="center|left"
                android:drawableRight="@drawable/ic_arrow_normal"
                android:text="Anlamı Gör-Kelimeyi Yaz Test Sayısı"
                android:textSize="35sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/btnBack"
        android:text="GERİ"
        android:textColor="#fff"
        android:textSize="40sp"
        android:background="@drawable/button_selector_rectangle"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="90dp" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kutum.kelime.kelimekutum.Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="AYARLAR"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardTrueFalseTestNumber"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#f7f6f6"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center|left"
                    android:drawableRight="@drawable/ic_arrow_normal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="Doğru-Yanlış Test Sayısı"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardMultipleChoiceTestNumber"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#f7f6f6"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center|left"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_arrow_normal"
                    android:text="Çoktan Seçmeli Test Sayısı"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardListenMeaningTestNumber"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#f7f6f6"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center|left"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_arrow_normal"
                    android:text="Dinle-Anlamı Seç Test Sayısı"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardListenWordTestNumber"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#f7f6f6"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center|left"
                    android:drawableRight="@drawable/ic_arrow_normal"
                    android:text="Dinle-Kelimeyi Seç Test Sayısı"
                    android:textSize="18sp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardListenWriteTestNumber"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#f7f6f6"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center|left"
                    android:drawableRight="@drawable/ic_arrow_normal"
                    android:text="Dinle-Kelimeyi Yaz Test Sayısı"
                    android:textSize="18sp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardSeeMeaningWriteWord"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#f7f6f6"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center|left"
                    android:drawableRight="@drawable/ic_arrow_normal"
                    android:text="Anlamı Gör-Kelimeyi Yaz Test Sayısı"
                    android:textSize="18sp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnBack"
        android:text="GERİ"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@drawable/button_selector_rectangle"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>

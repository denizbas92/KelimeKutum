<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kutum.kelime.kelimekutum.MultipleChoice">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="#0399fd"
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="430dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="22dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/tvStep"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/amethysta"
                    android:padding="10dp"
                    android:textSize="45sp" />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cardWord"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:id="@+id/tvIcon" />

                    <TextView
                        android:id="@+id/tvWord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvIcon"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="10dp"
                        android:drawableRight="@drawable/ic_volume_large"
                        android:fontFamily="@font/abhaya_libre"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:text="DÄ°NLE "
                        android:textSize="40sp"
                        android:textStyle="bold" />
                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/tvAnswer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvWord"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/abhaya_libre"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:textAllCaps="false"
                android:visibility="invisible"
                android:id="@+id/btnOne"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="100dp"
                android:gravity="left|center"
                android:layout_marginRight="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/default_option"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:textSize="28sp" />
            <Button
                android:textAllCaps="false"
                android:visibility="invisible"
                android:id="@+id/btnTwo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:gravity="left|center"
                android:layout_marginTop="10dp"
                android:background="@color/default_option"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:textSize="28sp" />
            <Button
                android:textAllCaps="false"
                android:visibility="invisible"
                android:id="@+id/btnThree"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:gravity="left|center"
                android:layout_marginTop="10dp"
                android:background="@color/default_option"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:textSize="28sp" />
            <Button
                android:textAllCaps="false"
                android:visibility="invisible"
                android:id="@+id/btnFour"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:gravity="left|center"
                android:layout_marginTop="10dp"
                android:background="@color/default_option"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:textSize="28sp" />

            <Button
                android:visibility="invisible"
                android:text="DEVAM ET"
                android:id="@+id/btnSkip"
                android:textSize="28sp"
                android:textColor="#fff"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:background="@drawable/button_selector_rectangle"
                android:layout_weight="1"
                android:layout_width="250dp"
                android:layout_marginTop="20dp"
                android:layout_height="70dp" />
        </LinearLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        ads:adSize="FULL_BANNER"
        ads:adUnitId="@string/bannerID"></com.google.android.gms.ads.AdView>
</RelativeLayout>
